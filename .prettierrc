{
  "semi": false,
  "trailingComma": "none",
  "singleQuote": true,
  "printWidth": 90,
  "useTabs": true,
  "arrowParens": "always",
  "bracketSpacing": true,
  "tabWidth": 2,
  "overrides": [
    {
      "files": ["package.json", "*.yml", ".prettierrc"],
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx"],
      "options": {
        "useTabs": true,
        "tabWidth": 2
      }
    }
  ]
}
